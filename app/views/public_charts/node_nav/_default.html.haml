.measures_nav_btn.forward_btn.inner_padding_small.line_height_buffer_xl.hide_on_mobile.hide_on_tablet_portrait.border_bottom_grey.clearfix
  = link_to id: node.id do
    %span.text_ellipsis
      = node.short_title
    - unless current_node.type == 'measure'
      %span.icon.icon_size_small.float_right.icon_brand_color_primary
        = render 'shared/icon', icon: '#icon_arrow_large_right', klass: 'vertical_align_middle'
