= render 'shared/measures_nav/measures_nav_container', node: @node

%div#main_content.col9
  = render 'public_charts/breadcrumbs/breadcrumbs', node: @node

  - if @node.detail_chart?
    = render 'public_charts/measure_detail'
  - else
    = render 'public_charts/overall_ranking_chart', node: @node
    %div.row.measure_teaser_container.clearfix{ class: ('is_not_category_page' unless @node.children.first.detail_chart?) }
      - @node.children.each do |child|
        - if child.detail_chart?
          = render 'public_charts/measure_teaser', node: child
        - else
          = render 'public_charts/category_teaser', node: child



