!!!
%html
  %head
    %title Comparitron
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    = stylesheet_link_tag    'application', media: 'all',
      'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    - if Rails.application.config.turbolinks_debugging_enabled
      = javascript_include_tag 'turbolinks_debugging', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{ class: [controller_name, controller_action_name],
         data: { view_name: controller_action_name } }
    #outer_container
      #top_nav
        #logo Dabo Health
        #news_feed News Feed
        #metrics Metrics
        #menu
          #menu_icon Menu
          #menu_text Menu
      = yield
