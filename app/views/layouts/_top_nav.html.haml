#top_nav.is_sticky.border_bottom_grey.clearfix
  .menu_icon.line_height_buffer_base.vertical_padding_base.hide_on_desktop
    %span.icon.icon_size_small.icon_list
      = render 'shared/icon', icon: '#icon_list', klass: 'vertical_align_middle'
    %span.icon.icon_size_small.icon_arrow_large_left.hidden
      = render 'shared/icon', icon: '#icon_arrow_large_left', klass: 'vertical_align_middle'
  .breadcrumbs.line_height_buffer_base.text_ellipsis.vertical_padding_base
    = yield :breadcrumbs
  .search.line_height_buffer_base.vertical_padding_base
    = render partial: 'layouts/search_form'
