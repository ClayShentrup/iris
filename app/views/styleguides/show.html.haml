!!!
%html
  %head
    %title Dabo Health Styleguide
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    = stylesheet_link_tag    'application', media: 'all',
      'data-turbolinks-track'
    - if Rails.application.config.turbolinks_debugging_enabled
      = javascript_include_tag 'turbolinks_debugging'
    = csrf_meta_tags
  %body#body{ class: [controller_name, controller_action_name], |
         data: { |
           view_name: controller_action_name, |
           pixel_path: asset_path('pixel.gif'), |
           current_user_id: current_user.try(:id) |
         } |
       } |
    = render 'shared/icon_definitions'
    .styleguide
      .styleguide_nav.border_bottom_grey.inner_padding_base.clearfix.line_height_buffer_base
        .inner_content
          %ul.unstyled.clearfix.vertical_align_middle
            %li.icon.icon_brand_color_primary.icon_size_large.float_left
              = render 'shared/icon', icon: '#icon_dabo-d-logo', klass: 'vertical_align_middle'
            %li.float_left.vertical_padding_small= link_to 'Typography', '#typography'
            %li.float_left.vertical_padding_small= link_to 'Buttons', '#buttons'
            %li.float_left.vertical_padding_small= link_to 'Grids', '#grids'
            %li.float_left.vertical_padding_small= link_to 'Forms', '#forms'
            %li.float_left.vertical_padding_small= link_to 'Tables', '#tables'
            %li.float_left.vertical_padding_small= link_to 'Colors', '#colors'
            %li.float_left.vertical_padding_small= link_to 'Icons', '#icons'
            %li.float_left.vertical_padding_small= link_to 'Layout', '#layout'

      .main_content
        = render 'text'
        = render 'buttons'
        = render 'grids'
        = render 'forms'
        = render 'tables'
        = render 'colors'
        = render 'icons'
        = render 'layout'
