    %span.icon.icon_size_large.block
      = render 'shared/icon', icon: '#icon_search'
    %p.text_small .icon_size_large

%h2 Icon Colors
%p By default, icons are grey #CCCCCC.
.row.top_margin_base
  .col3.border_grey.text_center.inner_padding_small
    %span.icon.icon_size_base.icon_brand_color_primary.block
      = render 'shared/icon', icon: '#icon_search'
    %p.text_small .icon_brand_color_primary

%h2 Toggle Icon
%p Highlight icon color on hover or when .active is present.
.row.top_margin_base
  .col3.border_grey.text_center.inner_padding_small
    %span.icon.toggle_icon.icon_size_base.block
      = render 'shared/icon', icon: '#icon_eye'
    %p.text_small .icon_toggle
  .col3.border_grey.text_center.inner_padding_small
    %span.icon.toggle_icon.active.icon_size_base.block
      = render 'shared/icon', icon: '#icon_eye'
    %p.text_small .icon_toggle.active

