.row
  .login.top_margin_large.centered
    = render 'devise/shared/logo'
    %h2.bottom_margin_base Sign In
    - if alert
      #error_explanation
        %p= alert
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, placeholder: 'name@email.com', class: 'form_control'
      .field
        = f.label :password
        .has_icon_inside.clearfix.line_height_buffer_base
          = f.password_field :password, autocomplete: "off", class: 'no_margin form_control float_left paste_disabled'
          %span.icon.toggle_icon.icon_size_base.form_control_icon.line_height_base.toggle_password
            = render 'shared/icon', icon:'#icon_eye'

      .actions
        = f.submit "Sign in"
        = link_to "Forgot Password?", new_password_path(resource_name)
