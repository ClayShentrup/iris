= render 'user_profiles/user_nav', title: 'Change Password'

.inner_padding_large
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .field
      = f.label :current_password
      = f.password_field :current_password, autocomplete: 'off', required: true, class: 'form_control'
    .field
      = f.label :password
      = f.password_field :password, autocomplete: 'off', required: true, class: 'form_control'
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: 'off', required: true, class: 'form_control'
    .actions
      = f.submit 'Update'
