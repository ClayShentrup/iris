.row
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'form_control'
    .field
      = f.label :password
      - if @validatable
        %span.text_muted
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: 'form_control'
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form_control'
    .actions
      = f.submit "Sign up"
  = render "devise/shared/links"
