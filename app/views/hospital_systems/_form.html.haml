= form_for hospital_system do |f|
  - if hospital_system.errors.any?
    #error_explanation
      %h2= "#{pluralize(hospital_system.errors.count, "error")} prohibited this hospital_system from being saved:"
      %ul
        - hospital_system.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
