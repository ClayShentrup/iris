- if @account.errors.any?
  %ul.errors
    - @account.errors.full_messages.each do |msg|
      %li
        = msg

= form_for [:dabo_admin, @account] do |f|
  - @form = f
  .field.system_selection
    = f.label :system_name
    = f.collection_select(:virtual_system_id, |
    VirtualHospitalSystemCollection.call, |
    :to_global_id, |
    :name, |
    include_blank: true)
  = render 'hospital_select'
  .field
    = f.label :user
    = f.collection_select(:users, |
    User.all, |
    :id, |
    :email, |
    {include_blank: false, include_hidden: false}, |
    {multiple: true})
  .actions
    = f.submit


