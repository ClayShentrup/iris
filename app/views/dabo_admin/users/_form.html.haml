= form_for [:dabo_admin, user] do |f|
  - if user.errors.any?
    #error_explanation
      %h2= "#{pluralize(user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email, class: 'form_control'
  .field
    = f.label :password
    = f.password_field :password, autocomplete: "off", class: 'form_control'
  .field
    = f.label :is_dabo_admin
    = f.check_box :is_dabo_admin
  .actions
    = f.submit 'Save'
    = link_to 'Back', dabo_admin_users_path(user)
